{
  "name": "lysa",
  "version": "1.0.0",
  "description": "Mo money",
  "main": "lysa.js",
  "author": "Staffan Garhammar",
  "license": "ISC",
  "scripts": {
    "preinstall": "npm install -g pm2 && pm2 install pm2-logrotate && pm2 set pm2-logrotate:retain 7",
    "prod": "export NODE_ENV=production; pm2 start lysa.js -i 0",
    "dev": "export NODE_ENV=development; pm2 start lysa.js --watch && pm2 logs all --lines 40",
    "stop": "pm2 delete all",
    "test": "node_modules/eslint/bin/eslint.js --env browser ./public/**/*.js && node_modules/eslint/bin/eslint.js --env node ./server/**/*.js;",
    "build": "export NODE_ENV=production; ./node_modules/.bin/webpack --config webpack.config.production.js"
  },
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "compression": "^1.6.1",
    "express": "^4.13.4",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "eslint": "^2.8.0",
    "eslint-loader": "^1.3.0",
    "pre-commit": "^1.1.2",
    "webpack": "^1.13.0"
  }
}
